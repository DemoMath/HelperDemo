<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp" >

        <TextView
            android:id="@+id/qiandao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/quick_option_text_nor"
            android:gravity="center"
            android:text="签到"
            android:clickable="true"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:drawableTop="@mipmap/quick_option_album_nor"
            android:gravity="center"
            android:text="相册"
            android:clickable="true"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/camoer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableTop="@mipmap/quick_option_photo_nor"
            android:gravity="center"
            android:text="拍照"
            android:textColor="#000000"
            android:clickable="true"
            android:textSize="18sp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/btn_quickoption_selector" />
    </FrameLayout>

</LinearLayout>